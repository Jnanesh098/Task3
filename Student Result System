import java.util.Scanner;

public class StudentResultSystem {
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		
		while (true) {
			System.out.print("\nEnter student name (or type EXIT to stop): ");
            String name = sc.next();

            if (name.equalsIgnoreCase("EXIT")) {
                System.out.println("Program terminated.");
                break;
            }
            int[] marks = new int[5];
            int total = 0;

            for (int i = 0; i < 5; i++) {
                System.out.print("Enter marks for subject " + (i + 1) + ": ");
                int mark = sc.nextInt();

                if (mark < 0 || mark > 100) {
                    System.out.println("Invalid marks! Enter between 0 and 100.");
                    i--; // repeat same subject
                    continue;
                }
                marks[i] = mark;
                total += mark;
            }
            double percentage = calculatePercentage(total);
            char grade = calculateGrade(percentage);

            System.out.println("\n--- Result Summary ---");
            System.out.println("Student Name : " + name);
            System.out.println("Total Marks  : " + total + "/500");
            System.out.printf("Percentage   : %.2f%%\n", percentage);
            System.out.println("Grade        : " + grade);
        }
		sc.close();
    }
    static double calculatePercentage(int total) {
        return total / 5.0;
    }
    static char calculateGrade(double percentage) {
        char grade;

        if (percentage >= 90) grade = 'A';
        else if (percentage >= 75) grade = 'B';
        else if (percentage >= 60) grade = 'C';
        else if (percentage >= 40) grade = 'D';
        else grade = 'F';

        switch (grade) {
            case 'A':
            case 'B':
                System.out.println("Status       : Excellent");
                break;
            case 'C':
                System.out.println("Status       : Good");
                break;
            case 'D':
                System.out.println("Status       : Pass");
                break;
            default:
                System.out.println("Status       : Fail");
        }
        return grade;
    }
}
